<Page x:ConnectionId='1'
    x:Class="menu.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:menu"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:data="using:Binding"
    xmlns:Name="local"
    xmlns:media="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    mc:Ignorable="d" >
    

    <Grid Background="{ThemeResource SystemControlAcrylicElementBrush}">
       
        <Grid Background="{ThemeResource SystemControlAcrylicElementBrush}" >
            
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>
            
            <GridView x:ConnectionId='2'                                IsItemClickEnabled="True"                               >
                <GridView.ItemTemplate>
                    <DataTemplate                        >
                        <StackPanel x:ConnectionId='4' Orientation="Horizontal" HorizontalAlignment="Center">
                            <Image x:ConnectionId='5' Width="150"                             HorizontalAlignment="Center"></Image>
                            <StackPanel Margin="20,20,0,0">
                                <TextBlock x:ConnectionId='6' FontSize="18"                      HorizontalAlignment="Right"></TextBlock>
                                <TextBlock x:ConnectionId='7' FontSize="10"                              TextWrapping="Wrap" HorizontalAlignment="Left" Width="100"></TextBlock>
                            </StackPanel>
                        </StackPanel>
                    </DataTemplate>
                </GridView.ItemTemplate>
            </GridView>
            <TextBlock x:ConnectionId='3' Grid.Row="1" Name="ResultTextBlock" FontSize="24" Foreground="Red" FontWeight="Bold" />
        </Grid>
    </Grid>
</Page>


